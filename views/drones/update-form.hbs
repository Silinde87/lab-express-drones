<form action="/drones/{{_id}}/edit" method="POST">
    <label for="dron-name">Name:</label>
    <input type="text" name="name" value="{{name}}" required>

    <label for="dron-propellers">NÂº Propellers:</label>
    <input type="number" name="propellers" min="0" value="{{propellers}}" required>

